<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    android:theme="@style/ActionBarFileChooser"
    app:contentInsetStart="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/prev_path_button"
            android:contentDescription="Previous Path"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@null"
            android:scaleType="fitXY"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:src="@drawable/baseline_north_24"
            android:tint="?attr/colorOnPrimary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/dir_name"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="DirName"
                android:textColor="?attr/colorOnPrimary" />

            <TextView
                android:id="@+id/dir_path"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="1"
                android:text="path"
                android:textColor="?attr/colorOnPrimary" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/home_button"
            android:contentDescription="Home Button"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="0"
            android:background="@null"
            android:scaleType="fitXY"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:src="@drawable/baseline_home_24"
            android:tint="?attr/colorOnPrimary" />

    </LinearLayout>
</androidx.appcompat.widget.Toolbar>